<% provide :title, t(".title") %>
<% provide :url, user_path %>
<% provide :button_text, t(".label_submit") %>
<h1><%= t ".header" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", user: @user, gender_options: @gender_options %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".gravatar_change"), "http://gravatar.com/emails",
        target: "_blank", rel: "noopener noreferrer" %>
    </div>
  </div>
</div>
