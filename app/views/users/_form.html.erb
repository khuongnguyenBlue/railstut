<%= form_for user, url: yield(:url) do |f| %>
  <%= render "shared/error_messages", user: user %>

  <%= f.label :name, t(".label_name") %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :email, t(".label_email") %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :gender, t(".label_gender") %>
  <%= f.select :gender, options_for_select(gender_options) %>

  <%= f.label :age, t(".label_age") %>
  <%= f.number_field :age, class: "form-control" %>

  <%= f.label :password, t(".label_passwd") %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirmation, t(".label_passwd_cf") %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
