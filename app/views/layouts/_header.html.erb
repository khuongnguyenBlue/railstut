<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".link1"), root_path, class: "logo" %>
    <div id="nav">
      <%= t "lang.lang" %>:
      <%= link_to_unless_current t("lang.en"), locale: :en %> |
      <%= link_to_unless_current t("lang.vi"), locale: :vi %>
    </div>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".link2"), root_path %></li>
        <li><%= link_to t(".link3"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".users"), users_path %></li>
          <li class="dropdown">
            <%= link_to("#", class: "dropdown-toggle", data: {toggle: "dropdown"}) do %>
              <%= t(".account") %>
              <%= content_tag :b, "", class: "caret" %>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".setting"), edit_user_path(current_user) %></li>
              <li class="divider"> </li>
              <li>
                <%= link_to t(".log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".link4"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
